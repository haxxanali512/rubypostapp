<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table">
  <thead class="text-center">
    <tr >
      <th scope="col">Post name</th>
      <th scope="col">Description</th>
      <th scope="col">Photo</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody class="text-center">
    <tr>
     <% @posts.each do |post| %>
      <td><%= post.post_name %></td>
      <td><%= post.description %></td>
      <td><%= post.photo %></td>
      <td><%= link_to 'Show', post, class:"btn btn-primary"%> 
      <%= link_to 'Edit', edit_post_path(post), class:"btn btn-success"%>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
    </tr>
        <% end %>
     </tbody>
</table>

<br>
<%= link_to 'New Post', new_post_path, class:"btn btn-secondary" %>





